    		<span style="width: 50px;">{{ faucet.id }} / </span>{{ faucet.info }}
    	</a>
#}
    	
    	<div class="col-xs-1">
    		{{ faucet.id }}
    	</div>
    	
    	<div class="col-xs-11">
        	<a href="#" onclick="processAction( '{{ path('postindex', {action: 'select'}) }}', {id: {{ faucet.id }}, url: '{{ path('showindex') }}'}  )" class="list-group-item {{ bg_color_css }}">
        		{{ faucet.info }}
        	</a>
    	</div>
    	
    	
    	
    	
    	
    	
	{% endfor %}
	
	
	</div>
	
	
	
</div>

{% endblock %}