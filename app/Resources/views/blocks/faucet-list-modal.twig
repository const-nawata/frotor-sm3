{% extends 'blocks/base-modal.twig' %}
{% set modal_title = 'Faucets list' %}
{% set modal_id = 'faucets_list_modal' %}

{% block modalcontent %}

<div class="list-group">



	<div class="container-fluid">

    {% for faucet in faucets %}
        {% if faucet.is_ban %}
        	{% set bg_color_css = 'list-group-item-danger' %}
        {% elseif faucet.is_time %}
        	{% set bg_color_css = 'list-group-item-success' %}
        {% else %}
        	{% set bg_color_css = 'list-group-item-warning' %}
        {% endif %}
    
    
{#
